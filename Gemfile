# frozen_string_literal: true

source "https://rubygems.org"

git_source(:github) { |repo_name| "https://github.com/#{repo_name}" }

# Uncomment the follow for command line apps
gem "commander", require: "commander/import"
gem "ruby-progressbar"
gem "tty-spinner"

# Linting for Ruby projects
gem "rubocop"
gem "rubocop-rails_config"
gem "rubocop-rails"

# A nice, new, debugger
gem "ruby_jard"

# Allow easy includes
gem "require_all"

# You probably have secrets, this is for that
gem "dotenv", require: "dotenv/load"

# Download YouTube videos
gem "youtube-dl.rb", git: "https://github.com/joshmn/youtube-dl.rb"

# Google's speech to text library
gem "google-cloud-speech"

# Google's cloud library
gem "google-cloud-storage"
